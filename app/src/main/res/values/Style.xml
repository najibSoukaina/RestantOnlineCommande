<?xml version="1.0" encoding="utf-8"?>
<resources  xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="input_field" parent="Theme.MaterialComponents.DayNight">
        <item name="android:background">@drawable/bg_input_field</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:paddingHorizontal" tools:targetApi="26">20dp</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>
    <string name="tab_text_1">Deals</string>
    <string name="tab_text_2">For One</string>
    <string name="tab_text_3">For Sharing</string>
    <string name="tab_text_4">Sides&amp;Desserts </string>
    <string name="tab_text_5">Beverages</string>
    <style name="progress_bar">
        <item name="android:padding">10dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:background">@drawable/custom_progress_bar</item>
        <item name="android:indeterminateTint">@color/purple_700</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:textCursorDrawable">@color/purple_500</item>
    </style>

</resources>